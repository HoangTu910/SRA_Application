<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Bo góc với radius 12dp (có thể điều chỉnh) -->
    <corners android:radius="12dp" />
    <!-- Viền ngoài -->
    <stroke
        android:width="1dp"
        android:color="#999999" />
    <!-- Màu nền (trắng) -->
    <solid android:color="#FFFFFF" />
    <!-- Padding bên trong để text không sát viền -->
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="12dp"
        android:bottom="12dp" />
</shape>